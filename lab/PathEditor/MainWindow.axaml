<Window x:Class="PathEditor.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="using:PathEditor"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="PathEditor"
        d:DesignHeight="450"
        d:DesignWidth="800"
        mc:Ignorable="d">
    <Window.Resources>
        <ControlTheme x:Key="ControlPointThumb" TargetType="Thumb">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="CornerRadius" Value="{DynamicResource ColorSliderCornerRadius}" />
            <Setter Property="Width" Value="16" />
            <Setter Property="Height" Value="16" />
            <Setter Property="Margin" Value="-8,-8,0,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style Selector="^:pointerover">
                <Setter Property="Opacity" Value="0.9" />
            </Style>

            <Style Selector="^:pressed">
                <Setter Property="Opacity" Value="0.75" />
            </Style>
        </ControlTheme>
    </Window.Resources>
    <Canvas Name="canvas"
            Background="Transparent"
            RenderOptions.RequiresFullOpacityHandling="True">
        <Canvas.ContextMenu>
            <ContextMenu>
                <MenuItem Click="AddOpClicked" Header="Arc" />
                <MenuItem Click="AddOpClicked" Header="Close" />
                <MenuItem Click="AddOpClicked" Header="Cubic" />
                <MenuItem Click="AddOpClicked" Header="Line" />
                <MenuItem Click="AddOpClicked" Header="Move" />
                <MenuItem Click="AddOpClicked" Header="Quad" />
            </ContextMenu>
        </Canvas.ContextMenu>
    </Canvas>
</Window>
