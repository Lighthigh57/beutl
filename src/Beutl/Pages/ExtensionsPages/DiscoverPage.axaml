<UserControl x:Class="Beutl.Pages.ExtensionsPages.DiscoverPage"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:asyncImageLoader="using:AsyncImageLoader"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lang="using:Beutl.Language"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:viewModel="using:Beutl.ViewModels.ExtensionsPages"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="viewModel:DiscoverPageViewModel"
             Focusable="True"
             RenderOptions.BitmapInterpolationMode="HighQuality"
             mc:Ignorable="d">

    <UserControl.KeyBindings>
        <KeyBinding Command="{CompiledBinding Refresh}" Gesture="F5" />
        <KeyBinding Command="{CompiledBinding Refresh}" Gesture="Ctrl+R" />
    </UserControl.KeyBindings>

    <Panel>
        <ScrollViewer Padding="18">
            <StackPanel Margin="10,0">
                <Panel>
                    <TextBlock HorizontalAlignment="Left"
                               Text="{x:Static lang:ExtensionsPage.Top10}"
                               Theme="{StaticResource SubtitleTextBlockStyle}" />

                    <ui:HyperlinkButton HorizontalAlignment="Right"
                                        Click="MoreRanking_Click"
                                        Content="{x:Static lang:Strings.ShowMore}"
                                        Tag="Overall" />
                </Panel>
                <ScrollViewer Margin="0,8,0,0"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsRepeater ItemsSource="{Binding Top10}">
                        <ItemsRepeater.Layout>
                            <UniformGridLayout MaximumRowsOrColumns="2"
                                               MinColumnSpacing="16"
                                               MinItemHeight="114"
                                               MinItemWidth="350"
                                               MinRowSpacing="16"
                                               Orientation="Vertical" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Button Padding="0"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Stretch"
                                        Click="Package_Click">
                                    <Grid Margin="16" ColumnDefinitions="Auto,16,*">
                                        <Image Width="80"
                                               Height="80"
                                               asyncImageLoader:ImageLoader.Source="{Binding LogoUrl.Value}"
                                               ImageClipping.CornerRadius="8" />

                                        <Grid Grid.Column="2"
                                              Margin="0,2"
                                              VerticalAlignment="Stretch"
                                              RowDefinitions="*,Auto">
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="{Binding Name}" />

                                                <TextBlock IsVisible="{Binding DisplayName.Value, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" Text="{Binding DisplayName.Value}">
                                                    <TextBlock.Styles>
                                                        <Style Selector="TextBlock">
                                                            <Setter Property="FontFamily" Value="XamlAutoFontFamily" />
                                                            <Setter Property="FontSize" Value="16" />
                                                            <Setter Property="FontWeight" Value="SemiBold" />
                                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                                            <Setter Property="TextWrapping" Value="Wrap" />
                                                        </Style>
                                                    </TextBlock.Styles>
                                                </TextBlock>
                                            </StackPanel>

                                            <TextBlock Grid.Row="1"
                                                       VerticalAlignment="Bottom"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       Text="{Binding Owner.Name}" />
                                        </Grid>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>

                <Panel Margin="0,32,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <TextBlock HorizontalAlignment="Left"
                                   Text="{x:Static lang:ExtensionsPage.Ranking}"
                                   Theme="{StaticResource SubtitleTextBlockStyle}" />

                        <ComboBox x:Name="RankingComboBox"
                                  VerticalAlignment="Bottom"
                                  SelectedIndex="0">
                            <ComboBox.Styles>
                                <Style Selector="ComboBox">
                                    <Setter Property="Padding" Value="0,5,0,7" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />

                                    <Style Selector="^:pointerover">
                                        <Style Selector="^ /template/ ContentPresenter#ContentPresenter">
                                            <Setter Property="Foreground" Value="{DynamicResource ButtonForeground}" />
                                        </Style>
                                        <Style Selector="^ /template/ TextBlock#PlaceholderTextBlock">
                                            <Setter Property="Foreground" Value="{DynamicResource ButtonForeground}" />
                                        </Style>
                                        <Style Selector="^ /template/ Border#Background">
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                        </Style>
                                    </Style>

                                    <Style Selector="^:pressed">
                                        <Style Selector="^ /template/ TextBlock#PlaceholderTextBlock">
                                            <Setter Property="Foreground" Value="{DynamicResource ButtonForeground}" />
                                            <Setter Property="Opacity" Value="0.5" />
                                        </Style>
                                        <Style Selector="^ /template/ ContentPresenter#ContentPresenter">
                                            <Setter Property="Foreground" Value="{DynamicResource ButtonForeground}" />
                                            <Setter Property="Opacity" Value="0.5" />
                                        </Style>
                                        <Style Selector="^ /template/ Border#Background">
                                            <Setter Property="Background" Value="Transparent" />
                                        </Style>
                                    </Style>
                                </Style>
                            </ComboBox.Styles>
                            <ComboBoxItem Content="{x:Static lang:ExtensionsPage.Daily}" Tag="{Binding DailyRanking}" />
                            <ComboBoxItem Content="{x:Static lang:ExtensionsPage.Weekly}" Tag="{Binding WeeklyRanking}" />
                        </ComboBox>
                    </StackPanel>

                    <ui:HyperlinkButton HorizontalAlignment="Right"
                                        Click="MoreRanking_Click"
                                        Content="{x:Static lang:Strings.ShowMore}"
                                        Tag="" />
                </Panel>
                <ScrollViewer Margin="0,8,0,0"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsRepeater ItemsSource="{Binding #RankingComboBox.SelectedItem.Tag}">
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="Horizontal" Spacing="16" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Button Width="160"
                                        Height="270"
                                        Padding="0"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        Click="Package_Click">
                                    <Grid Margin="16" RowDefinitions="Auto,16,*">
                                        <Image Width="120"
                                               Height="120"
                                               asyncImageLoader:ImageLoader.Source="{Binding LogoUrl.Value}"
                                               ImageClipping.CornerRadius="8" />

                                        <Grid Grid.Row="2"
                                              Margin="0,2"
                                              VerticalAlignment="Stretch"
                                              RowDefinitions="*,Auto">
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="{Binding Name}" />

                                                <TextBlock IsVisible="{Binding DisplayName.Value, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" Text="{Binding DisplayName.Value}">
                                                    <TextBlock.Styles>
                                                        <Style Selector="TextBlock">
                                                            <Setter Property="FontFamily" Value="XamlAutoFontFamily" />
                                                            <Setter Property="FontSize" Value="16" />
                                                            <Setter Property="FontWeight" Value="SemiBold" />
                                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                                            <Setter Property="TextWrapping" Value="Wrap" />
                                                        </Style>
                                                    </TextBlock.Styles>
                                                </TextBlock>
                                            </StackPanel>

                                            <TextBlock Grid.Row="1"
                                                       VerticalAlignment="Bottom"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       Text="{Binding Owner.Name}" />
                                        </Grid>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>

                <Panel Margin="0,32,0,0">
                    <TextBlock HorizontalAlignment="Left"
                               Text="{x:Static lang:ExtensionsPage.Recently}"
                               Theme="{StaticResource SubtitleTextBlockStyle}" />

                    <ui:HyperlinkButton HorizontalAlignment="Right"
                                        Click="MoreRanking_Click"
                                        Content="{x:Static lang:Strings.ShowMore}"
                                        Tag="Recently" />
                </Panel>
                <ScrollViewer Margin="0,8,0,0"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsRepeater ItemsSource="{Binding RecentlyRanking}">
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="Horizontal" Spacing="16" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Button Width="160"
                                        Height="270"
                                        Padding="0"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        Click="Package_Click">
                                    <Grid Margin="16" RowDefinitions="Auto,16,*">
                                        <Image Width="120"
                                               Height="120"
                                               asyncImageLoader:ImageLoader.Source="{Binding LogoUrl.Value}"
                                               ImageClipping.CornerRadius="8" />

                                        <Grid Grid.Row="2"
                                              Margin="0,2"
                                              VerticalAlignment="Stretch"
                                              RowDefinitions="*,Auto">
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="{Binding Name}" />

                                                <TextBlock IsVisible="{Binding DisplayName.Value, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" Text="{Binding DisplayName.Value}">
                                                    <TextBlock.Styles>
                                                        <Style Selector="TextBlock">
                                                            <Setter Property="FontFamily" Value="XamlAutoFontFamily" />
                                                            <Setter Property="FontSize" Value="16" />
                                                            <Setter Property="FontWeight" Value="SemiBold" />
                                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                                            <Setter Property="TextWrapping" Value="Wrap" />
                                                        </Style>
                                                    </TextBlock.Styles>
                                                </TextBlock>
                                            </StackPanel>

                                            <TextBlock Grid.Row="1"
                                                       VerticalAlignment="Bottom"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       Text="{Binding Owner.Name}" />
                                        </Grid>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>

            </StackPanel>
        </ScrollViewer>

        <ProgressRing IsIndeterminate="{CompiledBinding IsBusy.Value}" IsVisible="{CompiledBinding IsBusy.Value}" />
    </Panel>
</UserControl>
