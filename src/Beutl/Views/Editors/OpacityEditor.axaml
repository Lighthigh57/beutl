<UserControl x:Class="Beutl.Views.Editors.OpacityEditor"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Beutl.Views.Editors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="using:Beutl.ViewModels.Editors"
             d:DesignWidth="300"
             x:CompileBindings="True"
             x:DataType="vm:OpacityEditorViewModel"
             mc:Ignorable="d">
    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
        <TextBlock Margin="2,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text="{Binding Header}" />

        <Border Grid.Row="1"
                Height="20"
                Margin="8,0"
                VerticalAlignment="Top"
                CornerRadius="10"
                IsEnabled="{Binding CanEdit.Value}">
            <Border.Styles>
                <Style Selector="Border:disabled">
                    <Setter Property="Opacity" Value="0.8" />
                </Style>
            </Border.Styles>
            <Border.Background>
                <VisualBrush BitmapInterpolationMode="HighQuality"
                             DestinationRect="0,0,10,10"
                             TileMode="Tile">
                    <VisualBrush.Visual>
                        <Grid Width="10"
                              Height="10"
                              ColumnDefinitions="5,5"
                              RowDefinitions="5,5">
                            <Rectangle Fill="White" />

                            <Rectangle Grid.Column="1" Fill="LightGray" />

                            <Rectangle Grid.Row="1" Fill="LightGray" />

                            <Rectangle Grid.Row="1"
                                       Grid.Column="1"
                                       Fill="White" />
                        </Grid>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.Background>
        </Border>
        <Border Grid.Row="1"
                Height="20"
                Margin="8,0"
                VerticalAlignment="Top"
                CornerRadius="10"
                IsEnabled="{Binding CanEdit.Value}">
            <Border.Styles>
                <Style Selector="Border">
                    <Setter Property="Background">
                        <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                            <GradientStop Offset="0" Color="Transparent" />
                            <GradientStop Offset="1" Color="{DynamicResource TextFillColorPrimary}" />
                        </LinearGradientBrush>
                    </Setter>
                </Style>
                <Style Selector="Border:disabled">
                    <Setter Property="Background">
                        <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                            <GradientStop Offset="0" Color="Transparent" />
                            <GradientStop Offset="1" Color="#DDDDDD" />
                        </LinearGradientBrush>
                    </Setter>
                </Style>
            </Border.Styles>
        </Border>

        <Panel x:Name="area"
               Grid.Row="1"
               Height="20"
               Margin="8,0"
               VerticalAlignment="Top"
               Background="Transparent"
               ClipToBounds="False"
               IsHitTestVisible="{Binding CanEdit.Value}"
               PointerExited="Item_PointerExited"
               PointerMoved="Item_PointerMoved"
               PointerPressed="Item_PointerPressed">
            <Border x:Name="sliderBorder"
                    HorizontalAlignment="Left"
                    BorderBrush="{DynamicResource TextOnAccentFillColorPrimary}"
                    BorderThickness="3">
                <Border.RenderTransform>
                    <MultiBinding Converter="{StaticResource OpacityToTransform}">
                        <Binding Path="Value.Value" />
                        <Binding ElementName="area" Path="Bounds.Width" />
                    </MultiBinding>
                </Border.RenderTransform>
                <Border.Styles>
                    <Style Selector="Border">
                        <Setter Property="Width" Value="20" />
                        <Setter Property="Height" Value="20" />
                        <Setter Property="CornerRadius" Value="10" />
                        <Setter Property="Margin" Value="-10,0,0,0" />
                    </Style>
                </Border.Styles>
            </Border>
        </Panel>

        <Popup x:Name="popup"
               IsEnabled="{Binding CanEdit.Value}"
               IsLightDismissEnabled="True"
               PlacementAnchor="Right"
               PlacementGravity="TopLeft"
               PlacementMode="AnchorAndGravity">
            <Border Padding="8"
                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource OverlayCornerRadius}">
                <TextBox x:Name="numberbox" />
            </Border>
        </Popup>

        <local:PropertyEditorMenu Grid.Row="1"
                                  Grid.Column="1"
                                  Margin="0,0,0,8" />

    </Grid>
</UserControl>
