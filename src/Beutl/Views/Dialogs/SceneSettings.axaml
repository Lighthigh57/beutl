<ui:ContentDialog x:Class="Beutl.Views.Dialogs.SceneSettings"
                  xmlns="https://github.com/avaloniaui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:lang="using:Beutl.Language"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:ui="using:FluentAvalonia.UI.Controls"
                  xmlns:vm="using:Beutl.ViewModels.Dialogs"
                  Title="{x:Static lang:Strings.SceneSettings}"
                  d:DesignHeight="450"
                  d:DesignWidth="800"
                  x:DataType="vm:SceneSettingsViewModel"
                  CloseButtonText="{x:Static lang:Strings.Close}"
                  DefaultButton="Primary"
                  IsPrimaryButtonEnabled="{CompiledBinding CanApply.Value}"
                  PrimaryButtonCommand="{CompiledBinding Apply}"
                  PrimaryButtonText="{x:Static lang:Strings.Apply}"
                  mc:Ignorable="d">
    <StackPanel Spacing="8">
        <TextBlock Text="{x:Static lang:Strings.Size}" />
        <TextBox Text="{CompiledBinding Size.Value, Mode=TwoWay, Converter={StaticResource PixelSizeConverter}}" />

        <TextBlock Margin="0,8,0,0" Text="{x:Static lang:Strings.DurationTime}" />
        <TextBox Text="{CompiledBinding Duration.Value, Mode=TwoWay}" />
    </StackPanel>
</ui:ContentDialog>
