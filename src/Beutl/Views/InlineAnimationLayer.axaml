<UserControl x:Class="Beutl.Views.InlineAnimationLayer"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Beutl.ViewModels"
             Height="{Binding ObserveHeight.Value}"
             Margin="{Binding Margin.Value}"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Top"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="vm:InlineAnimationLayerViewModel"
             mc:Ignorable="d">
    <TransitioningContentControl x:Name="transitioning">
        <TransitioningContentControl.PageTransition>
            <CrossFade Duration="00:00:00.25" />
        </TransitioningContentControl.PageTransition>
    </TransitioningContentControl>
</UserControl>
