<UserControl x:Class="Beutl.Views.Tools.AnimationSpanEditor"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:editors="using:Beutl.Views.Editors"
             xmlns:icons="using:FluentIcons.FluentAvalonia"
             xmlns:lang="using:Beutl.Language"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Beutl.ViewModels.Tools"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:CompileBindings="True"
             x:DataType="vm:AnimationSpanEditorViewModel"
             DragDrop.AllowDrop="True"
             mc:Ignorable="d">
    <Expander Padding="0" IsExpanded="{Binding IsExpanded.Value, Mode=TwoWay}">
        <Expander.Resources>
            <SolidColorBrush x:Key="ExpanderContentBackground" Color="Transparent" />
            <StaticResource x:Key="ExpanderHeaderBackground" ResourceKey="CardBackgroundFillColorSecondaryBrush" />
            <Thickness x:Key="ExpanderContentDownBorderThickness">0</Thickness>
        </Expander.Resources>
        <Expander.Header>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <StackPanel.ContextMenu>
                    <ContextMenu>
                        <MenuItem Click="Remove_Click" Header="{x:Static lang:Strings.Remove}">
                            <MenuItem.Icon>
                                <icons:SymbolIcon Symbol="Delete" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </StackPanel.ContextMenu>
                <Border x:Name="dragBorder"
                        CornerRadius="{DynamicResource ControlCornerRadius}"
                        Cursor="SizeNorthSouth">
                    <Border.Styles>
                        <Style Selector="Border:pointerover">
                            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundPointerOver}" />
                        </Style>
                    </Border.Styles>
                    <icons:SymbolIcon FontSize="16" Symbol="ReOrderDotsVertical" />
                </Border>

                <TextBlock VerticalAlignment="Center" Text="{Binding Header.Value}" />
            </StackPanel>
        </Expander.Header>

        <Border x:Name="backgroundBorder"
                Background="Transparent"
                DragDrop.AllowDrop="True">
            <Panel>
                <Panel.Styles>
                    <Style Selector="Border.droparea">
                        <Setter Property="Background" Value="{DynamicResource SubtleFillColorSecondaryBrush}" />
                    </Style>
                </Panel.Styles>
                <editors:PropertiesEditor />

                <Border x:Name="topBorder"
                        Height="32"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        DragDrop.AllowDrop="True" />

                <Border x:Name="bottomBorder"
                        Height="32"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        DragDrop.AllowDrop="True" />
            </Panel>
        </Border>
    </Expander>
</UserControl>
