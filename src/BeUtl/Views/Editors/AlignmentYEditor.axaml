<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:BeUtl.Views.Editors"
             xmlns:viewModel="using:BeUtl.ViewModels.Editors"
             mc:Ignorable="d" d:DesignWidth="300"
             x:DataType="viewModel:AlignmentYEditorViewModel"
             x:Class="BeUtl.Views.Editors.AlignmentYEditor">
    <Grid ColumnDefinitions="2*,3*,Auto">
        <TextBlock
            Margin="10,0,0,0"
            Text="{Binding Header.Value}"
            ClipToBounds="False"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />

        <WrapPanel Orientation="Horizontal"
                   Grid.Column="1"
                   Margin="4,2"
                   HorizontalAlignment="Right"
                   IsEnabled="{Binding CanEdit.Value}">
            <WrapPanel.Styles>
                <Style Selector="RadioButton.list">
                    <Setter Property="Padding" Value="12,4" />
                </Style>
            </WrapPanel.Styles>
            <RadioButton CornerRadius="4,0,0,4"
                         Classes="list"
                         Checked="Top_Checked"
                         IsChecked="{CompiledBinding IsTop.Value}">
                <CompatSymbolIcon Symbol="AlignTop" />
            </RadioButton>
            <RadioButton CornerRadius="0"
                         Classes="list"
                         Checked="Center_Checked"
                         IsChecked="{CompiledBinding IsCenter.Value}">
                <CompatSymbolIcon Symbol="AlignCenterHorizontal" />
            </RadioButton>
            <RadioButton CornerRadius="0,4,4,0"
                         Classes="list"
                         Checked="Bottom_Checked"
                         IsChecked="{CompiledBinding IsBottom.Value}">
                <CompatSymbolIcon Symbol="AlignBottom" />
            </RadioButton>
        </WrapPanel>

        <local:EditorBadge Grid.Column="2" />
    </Grid>
</UserControl>
