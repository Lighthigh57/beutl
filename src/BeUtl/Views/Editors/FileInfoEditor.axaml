<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:BeUtl.Views.Editors"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="300"
             x:Class="BeUtl.Views.Editors.FileInfoEditor">
    <Grid ColumnDefinitions="2*,3*,Auto">
        <TextBlock
            Margin="10,0,0,0"
            Text="{Binding Header.Value}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />

        <Button Grid.Column="1"
                x:Name="button"
                IsEnabled="{Binding CanEdit.Value}"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                ToolTip.Tip="{Binding Setter.Value.FullName, Mode=OneWay}"
                Margin="4">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{Binding Setter.Value.Name, Mode=OneWay}" VerticalAlignment="Center" />

                <FluentIconRegular IconType="Open"
                                   Grid.Column="1"
                                   Width="14"
                                   Height="14"
                                   Margin="4"
                                   VerticalAlignment="Center" />
            </Grid>
        </Button>


        <local:EditorBadge Grid.Column="2" />
    </Grid>
</UserControl>
