<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="using:BeUtl.ViewModels.Editors"
             xmlns:local="using:BeUtl.Views.Editors"
             xmlns:media="using:BeUtl.Media"
             mc:Ignorable="d" d:DesignWidth="300"
             x:Name="root"
             x:DataType="vm:BrushEditorViewModel"
             x:Class="BeUtl.Views.Editors.BrushEditor">
    <Grid ColumnDefinitions="*,24" RowDefinitions="Auto,Auto">
        <TextBlock
            Margin="10,0,0,0"
            Text="{CompiledBinding Header.Value}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />

        <local:PropertiesEditor
            IsEnabled="{Binding CanEdit.Value}"
            Grid.Row="1" Grid.ColumnSpan="2"
            Padding="0" Margin="16,0,0,0"
            DataContext="{Binding #root.DataContext.ChildContext.Value}" />

        <Grid Grid.Row="1" ColumnDefinitions="2*,3*">
            <Button Grid.Column="1"
                    Margin="4"
                    IsEnabled="{Binding CanEdit.Value}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    IsVisible="{Binding IsNotSetAndCanWrite.Value}"
                    Click="New_Click">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <ui:SymbolIcon Symbol="New" />
                    <TextBlock Text="{DynamicResource S.Common.CreateNew}" />
                </StackPanel>
            </Button>
        </Grid>

        <Button Width="24" Height="24"
                Grid.Column="2"
                Margin="0,8"
                Padding="0" BorderThickness="0"
                Click="Menu_Click"
                HorizontalAlignment="Center"
                Background="Transparent">
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="Navigate_Click"
                              IsEnabled="{Binding IsSet.Value}"
                              Header="編集" />
                    <MenuItem Click="New_Click"
                              IsEnabled="{Binding CanWrite}"
                              Header="新規作成" />
                    <MenuItem Click="Delete_Click"
                              IsEnabled="{Binding CanDelete}"
                              Header="削除" />
                </ContextMenu>
            </Button.ContextMenu>
            <FluentIconRegular Width="16" Height="16"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               IconType="More_Vertical" />
        </Button>
    </Grid>
</UserControl>
