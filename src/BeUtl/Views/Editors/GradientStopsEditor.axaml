<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="using:BeUtl.ViewModels.Editors"
             xmlns:local="using:BeUtl.Views.Editors"
             mc:Ignorable="d" d:DesignWidth="300"
             x:DataType="vm:GradientStopsEditorViewModel"
             x:Class="BeUtl.Views.Editors.GradientStopsEditor">
    <Grid ColumnDefinitions="*,Auto" RowDefinitions="32,Auto,Auto">
        <TextBlock
            Margin="10,0,0,0"
            Text="{CompiledBinding Header.Value}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />

        <Border Grid.Row="1"
                Height="16"
                CornerRadius="8"
                Margin="8,0"
                PointerPressed="Items_PointerPressed"
                PointerReleased="Items_PointerReleased">
            <Border.Background>
                <LinearGradientBrush StartPoint="0%,50%"
                                     EndPoint="100%,50%"
                                     GradientStops="{CompiledBinding Stops}" />
            </Border.Background>            
        </Border>
        <ItemsControl Items="{CompiledBinding Stops}"
                      x:Name="items"
                      Grid.Row="1"
                      Height="16"
                      ClipToBounds="False"
                      Margin="8,0,4,0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Panel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>

                    <Border HorizontalAlignment="Left"
                            BorderThickness="2"
                            BorderBrush="{Binding Color, Converter={StaticResource ColorToBorderBrush}}"
                            PointerMoved="Item_PointerMoved"
                            PointerPressed="Item_PointerPressed"
                            PointerReleased="Item_PointerReleased"
                            PointerLeave="Item_PointerLeave"
                            Background="{Binding Color, Converter={StaticResource ColorToBrush}}">
                        <Border.RenderTransform>
                            <MultiBinding Converter="{StaticResource GradientStopToTransform}">
                                <Binding Path="Offset" />
                                <Binding Path="Bounds.Width" ElementName="items" />
                            </MultiBinding>
                        </Border.RenderTransform>
                        <Border.Styles>
                            <Style Selector="Border">
                                <Setter Property="Width" Value="16" />
                                <Setter Property="Height" Value="16" />
                                <Setter Property="CornerRadius" Value="8" />
                                <Setter Property="Margin" Value="-8,0,0,0" />
                            </Style>
                            <Style Selector="Border:pointerover">
                                <Setter Property="Width" Value="18" />
                                <Setter Property="Height" Value="18" />
                                <Setter Property="CornerRadius" Value="9" />
                                <Setter Property="Margin" Value="-9,0,0,0" />
                            </Style>
                        </Border.Styles>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <local:EditorBadge Grid.Column="1" Grid.Row="1" />

        <StackPanel Grid.Row="2"
                    Margin="8,8,4,0"
                    Orientation="Horizontal"
                    Spacing="4"
                    IsEnabled="{CompiledBinding IsSelected.Value}"
                    HorizontalAlignment="Right">
            <Button Width="35" Height="35" Click="Delete_Click">
                <ui:SymbolIcon Symbol="Delete" FontSize="16" />
            </Button>
            
            <ui:ColorPickerButton x:Name="colorPicker"
                                  Color="{CompiledBinding SelectedItem.Value.Color}"
                                  CustomPaletteColors="{StaticResource PaletteColors}"
                                  UseColorPalette="True" />
        </StackPanel>
    </Grid>
</UserControl>
