<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BeUtl.ViewModels.Editors"
             xmlns:local="using:BeUtl.Views.Editors"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="300"
             x:Class="BeUtl.Views.Editors.NavigateButton">
    <Grid ColumnDefinitions="2*,3*,24">
        <TextBlock
            Margin="10,0,0,0"
            Text="{Binding Header.Value}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />

        <Button Grid.Column="1"
                Margin="4"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Click="Navigate_Click">
            <StackPanel Orientation="Horizontal" Spacing="16">
                <ui:SymbolIcon Symbol="Open" />
                <TextBlock Text="{DynamicResource S.Common.Edit}" />
            </StackPanel>
        </Button>

    </Grid>
</UserControl>
