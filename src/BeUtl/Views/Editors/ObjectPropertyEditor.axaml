<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:BeUtl.Views.Editors"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BeUtl.Views.Editors.ObjectPropertyEditor">
    <ScrollViewer>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding Back}"
                        IsEnabled="{Binding CanBack.Value}"
                        Padding="8"
                        BorderThickness="0"
                        Background="Transparent">
                    <ui:SymbolIcon Symbol="Back" FontSize="16" />
                </Button>
            </StackPanel>
            
            <local:PropertiesEditor DataContext="{Binding ChildContext.Value}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
