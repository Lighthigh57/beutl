<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    xmlns:vm="using:BeUtl.ViewModels.Editors"
    xmlns:local="using:BeUtl.Views.Editors"
    x:DataType="vm:BooleanEditorViewModel"
    x:Class="BeUtl.Views.Editors.BooleanEditor">
    <Grid ColumnDefinitions="*,Auto">
        <CheckBox Margin="8,0"
                  Click="CheckBox_Click"
                  IsEnabled="{CompiledBinding CanEdit.Value}"
                  IsChecked="{CompiledBinding Value.Value, Mode=OneWay}"
                  Content="{CompiledBinding Header.Value}"/>

        <local:EditorBadge Grid.Column="1" />
    </Grid>
</UserControl>
