<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="using:BeUtl.ViewModels.Editors"
             xmlns:local="using:BeUtl.Views.Editors"
             mc:Ignorable="d" d:DesignWidth="300"
             x:DataType="vm:ColorEditorViewModel"
             x:Class="BeUtl.Views.Editors.ColorEditor">
    <Grid ColumnDefinitions="2*,3*,Auto">
        <TextBlock
            Margin="10,0,0,0"
            Text="{CompiledBinding Header.Value}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />

        <ui:ColorPickerButton
            x:Name="colorPicker"
            Color="{CompiledBinding Value.Value, Mode=OneWay}"
            HorizontalAlignment="Right"
            Margin="4"
            CustomPaletteColors="{StaticResource PaletteColors}"
            UseColorPalette="True"
            Grid.Column="1" />

        <local:EditorBadge Grid.Column="2" />
    </Grid>
</UserControl>
