<ui:ContentDialog x:Class="BeUtl.Views.Dialogs.CreateNewScene"
                  xmlns="https://github.com/avaloniaui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:icons="using:FluentIcons.FluentAvalonia"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:ui="using:FluentAvalonia.UI.Controls"
                  xmlns:vm="using:BeUtl.ViewModels.Dialogs"
                  Title="{DynamicResource S.Common.CreateNewScene}"
                  d:DesignHeight="450"
                  d:DesignWidth="800"
                  x:DataType="vm:CreateNewSceneViewModel"
                  CloseButtonText="{DynamicResource S.Common.Close}"
                  DefaultButton="Primary"
                  IsPrimaryButtonEnabled="{CompiledBinding CanCreate.Value}"
                  PrimaryButtonCommand="{CompiledBinding Create}"
                  PrimaryButtonText="{DynamicResource S.Common.CreateNew}"
                  mc:Ignorable="d">
    <ui:ContentDialog.DataContext>
        <vm:CreateNewSceneViewModel />
    </ui:ContentDialog.DataContext>
    <StackPanel Spacing="8">
        <TextBlock Text="{DynamicResource S.Common.Name}" />
        <TextBox InputMethod.IsInputMethodEnabled="True" Text="{CompiledBinding Name.Value, Mode=TwoWay}" />

        <Separator />

        <TextBlock Text="{DynamicResource S.Common.Location}" />
        <Panel>
            <TextBox Text="{CompiledBinding Location.Value, Mode=TwoWay}" />

            <Button HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="PickLocation">
                <icons:SymbolIcon Symbol="OpenFolder" />
            </Button>
        </Panel>

        <Separator />

        <TextBlock Text="{DynamicResource S.Common.Size}" />
        <TextBox Text="{CompiledBinding Size.Value, Mode=TwoWay, Converter={StaticResource PixelSizeConverter}}" />

        <Separator />

        <CheckBox Content="{DynamicResource S.Common.AddToCurrentProject}"
                  IsChecked="{CompiledBinding AddToCurrentProject.Value}"
                  IsEnabled="{CompiledBinding CanAddToCurrentProject.Value}" />
    </StackPanel>
</ui:ContentDialog>
