<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:ctrls="using:BeUtl.Controls"
             xmlns:viewModels="using:BeUtl.ViewModels.ExtensionsPages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:DevelopPageViewModel"
             x:Class="BeUtl.Pages.ExtensionsPages.DevelopPage">
    <UserControl.DataContext>
        <viewModels:DevelopPageViewModel />
    </UserControl.DataContext>
    <ScrollViewer Padding="18">
        <StackPanel Margin="8" Spacing="8">
            <TextBlock Text="{DynamicResource S.DevelopPage.Shortcuts}" Classes="SubtitleTextBlockStyle" />

            <ScrollViewer VerticalScrollBarVisibility="Disabled"
                          HorizontalScrollBarVisibility="Auto">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <ctrls:OptionsDisplayItem
                        Navigates="True"
                        NavigationRequested="CreateNewPackage_Click"
                        Header="{DynamicResource S.DevelopPage.CreateNewPackage}"
                        Description="{DynamicResource S.DevelopPage.CreateNewPackageDescription}">
                        <ctrls:OptionsDisplayItem.Icon>
                            <ui:SymbolIcon Symbol="New" />
                        </ctrls:OptionsDisplayItem.Icon>
                    </ctrls:OptionsDisplayItem>

                    <ctrls:OptionsDisplayItem
                        Header="{DynamicResource S.DevelopPage.Documents}"
                        Description="{DynamicResource S.DevelopPage.DocumentsDescription}">
                        <ctrls:OptionsDisplayItem.Icon>
                            <ui:SymbolIcon Symbol="Document" />
                        </ctrls:OptionsDisplayItem.Icon>
                    </ctrls:OptionsDisplayItem>
                </StackPanel>
            </ScrollViewer>

            <Separator Height="8" />
            <TextBlock Text="{DynamicResource S.DevelopPage.Packages}" Classes="SubtitleTextBlockStyle" />

            <ListBox Items="{CompiledBinding Packages}"
                     SelectionMode="Multiple"
                     x:Name="PackagesList">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,16,*,Auto">
                            <ctrls:CompatSymbolIcon IsVisible="{CompiledBinding Package.Value.IsVisible}" Symbol="Eye" />
                            <ctrls:CompatSymbolIcon IsVisible="{CompiledBinding !Package.Value.IsVisible}" Symbol="EyeOff" />

                            <StackPanel Spacing="4"
                                        VerticalAlignment="Center"
                                        Grid.Column="2">
                                <TextBlock Text="{CompiledBinding Package.Value.Name}" />

                                <TextBlock Text="{CompiledBinding LocalizedDisplayName.Value}">
                                    <TextBlock.Styles>
                                        <Style Selector="TextBlock">
                                            <Setter Property="FontFamily" Value="XamlAutoFontFamily" />
                                            <Setter Property="FontSize" Value="16" />
                                            <Setter Property="FontWeight" Value="SemiBold" />
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                        </Style>
                                    </TextBlock.Styles>
                                </TextBlock>
                            </StackPanel>

                            <ui:CommandBarButton Label="{DynamicResource S.Common.Edit}"
                                                 Grid.Column="3"
                                                 Click="Edit_Click"
                                                 Icon="Edit" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
