<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="using:BeUtl.ViewModels.ExtensionsPages.DevelopPages"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:ctrls="using:BeUtl.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:PackageReleasesPageViewModel"
             x:Class="BeUtl.Pages.ExtensionsPages.DevelopPages.PackageReleasesPage">
    <Grid RowDefinitions="Auto,Auto,*">
        <StackPanel Margin="10,8"
                    Spacing="16"
                    Orientation="Horizontal">
            <Button Content="{CompiledBinding Parent.Package.Value.Name}"
                    Classes="breadcrumb"
                    Click="NavigatePackageDetailsPage_Click" />

            <Label Classes="breadcrumb" />

            <TextBlock Text="リリースを管理"
                       Classes="breadcrumb" />
        </StackPanel>

        <ui:CommandBar Grid.Row="1"
                       Margin="10,0"
                       DefaultLabelPosition="Right">
            <ui:CommandBar.PrimaryCommands>
                <ui:CommandBarButton Label="追加" Icon="Add" Click="Add_Click" />
            </ui:CommandBar.PrimaryCommands>
        </ui:CommandBar>

        <ListBox Items="{CompiledBinding Items}"
                 x:Name="ReleasesList"
                 Grid.Row="2"
                 Margin="10,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="Auto,*,2*,Auto,Auto" MaxHeight="64">
                        <ui:PathIcon IsVisible="{CompiledBinding Release.Value.IsVisible}"
                                     Margin="0,0,16,0"
                                     Data="{StaticResource Eye_Show_Regular}" />
                        <ui:PathIcon IsVisible="{CompiledBinding !Release.Value.IsVisible}"
                                     Margin="0,0,16,0"
                                     Data="{StaticResource Eye_Hide_Regular}" />

                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="0,0,16,0"
                                    Grid.Column="1">
                            <TextBlock Text="{CompiledBinding Release.Value.Title}"
                                       Classes="BodyStrongTextBlockStyle" />

                            <TextBlock Text="{CompiledBinding Release.Value.Version}" />
                        </StackPanel>

                        <TextBlock Grid.Column="2"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="0,0,16,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   TextTrimming="CharacterEllipsis"
                                   Text="{CompiledBinding Release.Value.Body}" />

                        <ui:CommandBarButton Label="編集"
                                             Grid.Column="3"
                                             Click="Edit_Click"
                                             Icon="Edit" />

                        <ui:CommandBarButton Label="削除"
                                             Grid.Column="4"
                                             Click="Delete_Click"
                                             Icon="Delete" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
