<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="using:BeUtl.ViewModels.ExtensionsPages.DevelopPages"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:ctrls="using:BeUtl.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Name="root"
             x:DataType="viewModels:ResourcePageViewModel"
             x:Class="BeUtl.Pages.ExtensionsPages.DevelopPages.ResourcePage">
    <UserControl.Styles>
        <Style Selector="TextBox.customStyle">
            <Setter Property="MinWidth" Value="250" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style Selector="TextBlock.description">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Opacity" Value="0.8" />
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*,Auto">
        <StackPanel Margin="10,8"
                    Spacing="16"
                    Orientation="Horizontal">
            <Button Content="{CompiledBinding Parent.Parent.Name.Value}"
                    Classes="breadcrumb"
                    Click="NavigatePackageDetailsPage_Click" />

            <Label Classes="breadcrumb" />

            <Button Content="設定"
                    Classes="breadcrumb"
                    Click="NavigatePackageSettingsPage_Click" />

            <Label Classes="breadcrumb" />

            <TextBlock Text="{CompiledBinding ActualCulture.Value.DisplayName}"
                       Classes="breadcrumb" />
        </StackPanel>


        <ScrollViewer Grid.Row="1" Margin="10,0">
            <StackPanel Spacing="4">
                <TextBlock Classes="BodyStrongTextBlockStyle"
                           Margin="0,16,0,0"
                           Text="リソース" />

                <ctrls:OptionsDisplayItem Header="言語"
                                          Expands="True"
                                          Description="このリソースを表示する言語圏">
                    <ctrls:OptionsDisplayItem.ActionButton>
                        <TextBlock Text="{CompiledBinding ActualCulture.Value.DisplayName}"
                                   Classes="description" />
                    </ctrls:OptionsDisplayItem.ActionButton>
                    <ctrls:OptionsDisplayItem.Content>
                        <TextBox Text="{CompiledBinding CultureInput.Value}"
                                 Classes="customStyle" />
                    </ctrls:OptionsDisplayItem.Content>
                </ctrls:OptionsDisplayItem>

                <ctrls:OptionsDisplayItem Header="表示名"
                                          Description="パッケージの名前"
                                          Expands="True">
                    <ctrls:OptionsDisplayItem.ActionButton>
                        <Panel>
                            <TextBlock Text="{CompiledBinding ActualDisplayName.Value}"
                                       IsVisible="{CompiledBinding HasDisplayName.Value}"
                                       Classes="description" />
                            <TextBlock Text="{CompiledBinding Parent.Parent.DisplayName.Value}"
                                       IsVisible="{CompiledBinding !HasDisplayName.Value}"
                                       Classes="description" />
                        </Panel>
                    </ctrls:OptionsDisplayItem.ActionButton>
                    <ctrls:OptionsDisplayItem.Content>
                        <StackPanel Spacing="16">
                            <CheckBox IsChecked="{CompiledBinding InheritDisplayName.Value}"
                                      Content="値を継承する" />

                            <TextBox Text="{CompiledBinding DisplayName.Value}"
                                     IsEnabled="{CompiledBinding !InheritDisplayName.Value}"
                                     Classes="customStyle" />
                        </StackPanel>
                    </ctrls:OptionsDisplayItem.Content>
                </ctrls:OptionsDisplayItem>

                <ctrls:OptionsDisplayItem Header="説明"
                                          Description="パッケージの説明"
                                          Expands="True">
                    <ctrls:OptionsDisplayItem.ActionButton>
                        <Panel>
                            <TextBlock Text="{CompiledBinding ActualDescription.Value}"
                                       MaxWidth="150"
                                       IsVisible="{CompiledBinding HasDescription.Value}"
                                       TextTrimming="CharacterEllipsis"
                                       Classes="description" />

                            <TextBlock Text="{CompiledBinding Parent.Parent.Description.Value}"
                                       MaxWidth="150"
                                       IsVisible="{CompiledBinding !HasDescription.Value}"
                                       TextTrimming="CharacterEllipsis"
                                       Classes="description" />
                        </Panel>
                    </ctrls:OptionsDisplayItem.ActionButton>
                    <ctrls:OptionsDisplayItem.Content>
                        <StackPanel Spacing="16">
                            <CheckBox IsChecked="{CompiledBinding InheritDescription.Value}"
                                      Content="値を継承する" />
                            
                            <TextBox Text="{CompiledBinding Description.Value}"
                                     AcceptsReturn="True"
                                     IsEnabled="{CompiledBinding !InheritDescription.Value}"
                                     Classes="customStyle" />
                        </StackPanel>
                    </ctrls:OptionsDisplayItem.Content>
                </ctrls:OptionsDisplayItem>

                <ctrls:OptionsDisplayItem Header="短い説明"
                                          Description="パッケージの短い説明"
                                          Expands="True">
                    <ctrls:OptionsDisplayItem.ActionButton>
                        <Panel>
                            <TextBlock Text="{CompiledBinding ActualShortDescription.Value}"
                                       MaxWidth="150"
                                       IsVisible="{CompiledBinding HasShortDescription.Value}"
                                       TextTrimming="CharacterEllipsis"
                                       Classes="description" />

                            <TextBlock Text="{CompiledBinding Parent.Parent.ShortDescription.Value}"
                                       MaxWidth="150"
                                       IsVisible="{CompiledBinding !HasShortDescription.Value}"
                                       TextTrimming="CharacterEllipsis"
                                       Classes="description" />
                        </Panel>
                    </ctrls:OptionsDisplayItem.ActionButton>
                    <ctrls:OptionsDisplayItem.Content>
                        <StackPanel Spacing="16">
                            <CheckBox IsChecked="{CompiledBinding InheritShortDescription.Value}"
                                      Content="値を継承する" />

                            <TextBox Text="{CompiledBinding ShortDescription.Value}"
                                     IsEnabled="{CompiledBinding !InheritShortDescription.Value}"
                                     Classes="customStyle" />
                        </StackPanel>
                    </ctrls:OptionsDisplayItem.Content>
                </ctrls:OptionsDisplayItem>

                <ctrls:OptionsDisplayItem Header="ロゴ"
                                          Description="パッケージのロゴを設定"
                                          Expands="True">
                    <ctrls:OptionsDisplayItem.ActionButton>
                        <Button Content="参照"
                                IsEnabled="{CompiledBinding !InheritLogo.Value}"
                                Click="OpenLogoFile_Click" />
                    </ctrls:OptionsDisplayItem.ActionButton>
                    <ctrls:OptionsDisplayItem.Content>
                        <StackPanel Spacing="16">
                            <CheckBox IsChecked="{CompiledBinding InheritLogo.Value}"
                                      Content="値を継承する" />

                            <Image Source="{CompiledBinding LogoImage.Value}"
                                   MaxWidth="300" MaxHeight="300"
                                   HorizontalAlignment="Left" />

                            <ProgressBar IsVisible="{CompiledBinding IsLogoLoading.Value}"
                                         IsIndeterminate="{CompiledBinding IsLogoLoading.Value}" />
                        </StackPanel>
                    </ctrls:OptionsDisplayItem.Content>
                </ctrls:OptionsDisplayItem>

                <ctrls:OptionsDisplayItem Header="スクリーンショット"
                                          Description="パッケージのスクリーンショットを設定 (最大４枚まで)"
                                          Expands="True">
                    <ctrls:OptionsDisplayItem.Content>
                        <Grid RowDefinitions="Auto,*,Auto">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button Content="追加"
                                        Classes="accent"
                                        IsEnabled="{CompiledBinding CanAddScreenshot.Value}"
                                        Click="AddScreenshotFile_Click" />

                                <CheckBox IsChecked="{CompiledBinding InheritScreenshots.Value}"
                                          Content="値を継承する" />
                            </StackPanel>

                            <ScrollViewer HorizontalScrollBarVisibility="Visible"
                                          x:Name="ScreenshotsScrollViewer"
                                          Margin="0,8,0,0"
                                          Grid.Row="1"
                                          VerticalScrollBarVisibility="Disabled">
                                <ItemsControl Items="{CompiledBinding Screenshots}" Margin="0,0,0,8">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="8" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Image Source="{CompiledBinding Bitmap}"
                                                   MaxHeight="300">
                                                <Image.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Header="削除"
                                                                  CommandParameter="{Binding}"
                                                                  Command="{Binding #root.DataContext.DeleteScreenshot}">
                                                            <MenuItem.Icon>
                                                                <ctrls:FluentIconRegular IconType="Delete" />
                                                            </MenuItem.Icon>
                                                        </MenuItem>
                                                        <MenuItem Header="１つ手前に移動"
                                                                  CommandParameter="{Binding}"
                                                                  Command="{Binding #root.DataContext.MoveScreenshotFront}">
                                                            <MenuItem.Icon>
                                                                <ctrls:FluentIconRegular IconType="Arrow_Left" />
                                                            </MenuItem.Icon>
                                                        </MenuItem>
                                                        <MenuItem Header="１つ後ろに移動"
                                                                  CommandParameter="{Binding}"
                                                                  Command="{Binding #root.DataContext.MoveScreenshotBack}">
                                                            <MenuItem.Icon>
                                                                <ctrls:FluentIconRegular IconType="Arrow_Right" />
                                                            </MenuItem.Icon>
                                                        </MenuItem>
                                                    </ContextMenu>
                                                </Image.ContextMenu>
                                            </Image>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <ProgressBar Grid.Row="2"
                                         IsVisible="{CompiledBinding IsScreenshotLoading.Value}"
                                         IsIndeterminate="{CompiledBinding IsScreenshotLoading.Value}" />
                        </Grid>
                    </ctrls:OptionsDisplayItem.Content>
                </ctrls:OptionsDisplayItem>

                <ctrls:OptionsDisplayItem Header="削除"
                                          Icon="Delete"
                                          Navigates="True"
                                          NavigationRequested="DeleteResource_Click"
                                          Description="リソースを削除します。" />
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2"
                Padding="32,24"
                BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                BorderThickness="0,1,0,0">
            <StackPanel HorizontalAlignment="Right"
                        Spacing="8"
                        Orientation="Horizontal">
                <Button Content="変更を破棄する"
                        IsEnabled="{CompiledBinding IsChanging.Value}"
                        Command="{CompiledBinding DiscardChanges}" />

                <Button Content="保存"
                        IsEnabled="{CompiledBinding IsChanging.Value}"
                        Classes="accent"
                        Command="{CompiledBinding Save}" />
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
