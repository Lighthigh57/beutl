<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="using:BeUtl.ViewModels.ExtensionsPages.DevelopPages"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:ctrls="using:BeUtl.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:PackagePageViewModel"
             x:Class="BeUtl.Pages.ExtensionsPages.DevelopPages.PackagePage">
    <UserControl.Styles>
        <Style Selector="TextBox.customStyle">
            <Setter Property="MinWidth" Value="250" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style Selector="TextBlock.description">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Opacity" Value="0.8" />
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*,Auto">
        <TextBlock Text="{CompiledBinding ActualName.Value}"
                   Margin="10,8"
                   Classes="breadcrumb" />

        <ScrollViewer Grid.Row="1" Margin="10,0">
            <StackPanel Spacing="8">
                <TextBlock Classes="SubtitleTextBlockStyle"
                           Text="リソース" />

                <ctrls:OptionsDisplayItem Header="名前"
                                          Description="パッケージを識別するための文字列"
                                          Expands="True">
                    <ctrls:OptionsDisplayItem.ActionButton>
                        <TextBlock Text="{CompiledBinding ActualName.Value}"
                                   Classes="description" />
                    </ctrls:OptionsDisplayItem.ActionButton>
                    <ctrls:OptionsDisplayItem.Content>
                        <TextBox Text="{CompiledBinding Name.Value}"
                                 Classes="customStyle" />
                    </ctrls:OptionsDisplayItem.Content>
                </ctrls:OptionsDisplayItem>

                <TextBlock Margin="0,8,0,0"
                           FontStyle="Italic"
                           Text="この項目の値は'詳細なリソース'で設定されていないカルチャで表示されます。" />

                <ctrls:OptionsDisplayItem Header="表示名"
                                          Description="パッケージの名前"
                                          Expands="True">
                    <ctrls:OptionsDisplayItem.ActionButton>
                        <TextBlock Text="{CompiledBinding ActualDisplayName.Value}"
                                   Classes="description" />
                    </ctrls:OptionsDisplayItem.ActionButton>
                    <ctrls:OptionsDisplayItem.Content>
                        <TextBox Text="{CompiledBinding DisplayName.Value}"
                                 Classes="customStyle" />
                    </ctrls:OptionsDisplayItem.Content>
                </ctrls:OptionsDisplayItem>

                <ctrls:OptionsDisplayItem Header="説明"
                                          Description="パッケージの説明"
                                          Expands="True">
                    <ctrls:OptionsDisplayItem.ActionButton>
                        <TextBlock Text="{CompiledBinding ActualDescription.Value}"
                                   MaxWidth="150"
                                   TextTrimming="CharacterEllipsis"
                                   Classes="description" />
                    </ctrls:OptionsDisplayItem.ActionButton>
                    <ctrls:OptionsDisplayItem.Content>
                        <TextBox Text="{CompiledBinding Description.Value}"
                                 AcceptsReturn="True"
                                 Classes="customStyle" />
                    </ctrls:OptionsDisplayItem.Content>
                </ctrls:OptionsDisplayItem>

                <ctrls:OptionsDisplayItem Header="詳細なリソース"
                                          Description="カルチャごとにリソースを設定します。"
                                          NavigationRequested="NavigateToResourceSettings_Click"
                                          Navigates="True" />
                
                <TextBlock Margin="0,8,0,0"
                           Classes="SubtitleTextBlockStyle"
                           Text="設定" />

                <ctrls:OptionsDisplayItem Header="パッケージを削除"
                                          Icon="Delete"
                                          Navigates="True"
                                          NavigationRequested="DeletePackage_Click"
                                          Description="パッケージを削除します。" />
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2"
                Padding="32,24"
                BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                BorderThickness="0,1,0,0">
            <StackPanel HorizontalAlignment="Right"
                        Spacing="8"
                        Orientation="Horizontal">
                <Button Content="変更を破棄する"
                        Command="{CompiledBinding DiscardChanges}" />

                <Button Content="保存"
                        Classes="accent"
                        Command="{CompiledBinding Save}" />
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
