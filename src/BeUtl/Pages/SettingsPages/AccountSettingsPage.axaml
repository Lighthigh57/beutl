<UserControl x:Class="BeUtl.Pages.SettingsPages.AccountSettingsPage"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="using:BeUtl.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="using:BeUtl.ViewModels.SettingsPages"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="vm:AccountSettingsPageViewModel"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:AccountSettingsPageViewModel />
    </UserControl.DataContext>
    <Panel>
        <ScrollViewer x:Name="scrollViewer"
                      Padding="18"
                      IsVisible="{CompiledBinding SignedIn.Value}">
            <StackPanel Margin="10,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Orientation="Vertical"
                        Spacing="4">
                <Grid Margin="0,32,0,0" ColumnDefinitions="Auto,16,Auto,*">
                    <!--  プロフィール画像  -->
                    <Border Width="64"
                            Height="64"
                            Background="{DynamicResource ControlSolidFillColorDefaultBrush}"
                            CornerRadius="32"
                            IsVisible="{CompiledBinding !HasProfileImage.Value}">
                        <CompatSymbolIcon FontSize="30" Symbol="Person" />
                    </Border>
                    <Image Width="64"
                           Height="64"
                           IsVisible="{CompiledBinding HasProfileImage.Value}"
                           Source="{CompiledBinding ProfileImage.Value}">
                        <Image.Clip>
                            <EllipseGeometry Center="32,32"
                                             RadiusX="32"
                                             RadiusY="32" />
                        </Image.Clip>
                    </Image>
                    <Button Width="64"
                            Height="64"
                            Padding="0"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"
                            Click="UploadProfileImage_Click"
                            CornerRadius="32">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Content">
                                    <Template>
                                        <Border HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Background="Gray"
                                                CornerRadius="32"
                                                Opacity="0.8">
                                            <CompatSymbolIcon Symbol="Edit" />
                                        </Border>
                                    </Template>
                                </Setter>
                            </Style>
                        </Button.Styles>
                    </Button>

                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="8">

                            <!--  名前表示  -->
                            <TextBlock Classes="SubtitleTextBlockStyle" Text="{CompiledBinding DisplayName.Value}" />

                            <ui:InfoBadge Classes="Success Icon"
                                          IsVisible="{CompiledBinding User.Value.Info.IsEmailVerified}"
                                          ToolTip.Tip="{DynamicResource S.AccountSettingsPage.YourEmailAddressHasBeenVerified}" />

                        </StackPanel>

                        <!--  メールアドレス  -->
                        <TextBlock Classes="CaptionTextBlockStyle"
                                   Opacity="0.8"
                                   Text="{CompiledBinding User.Value.Info.Email}" />
                    </StackPanel>

                    <ui:CommandBar Grid.Column="3"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   DefaultLabelPosition="Right">
                        <ui:CommandBar.PrimaryCommands>
                            <ui:CommandBarButton Command="{CompiledBinding SignOut}" Label="{DynamicResource S.AccountSettingsPage.SignOut}">
                                <ui:CommandBarButton.Icon>
                                    <ctrls:CompatSymbolIcon Symbol="SignOut" />
                                </ui:CommandBarButton.Icon>
                            </ui:CommandBarButton>
                        </ui:CommandBar.PrimaryCommands>
                    </ui:CommandBar>
                </Grid>

                <!--  表示名を変更  -->
                <ctrls:OptionsDisplayItem x:Name="optionsItem1"
                                          Margin="0,24,0,0"
                                          Expands="True"
                                          Header="{DynamicResource S.AccountSettingsPage.ChangeDisplayName}">

                    <ctrls:OptionsDisplayItem.Icon>
                        <ctrls:CompatSymbolIcon Symbol="Rename" />
                    </ctrls:OptionsDisplayItem.Icon>

                    <ctrls:OptionsDisplayItem.Content>
                        <StackPanel Spacing="8">
                            <TextBlock Classes="BodyTextBlockStyle" Text="{DynamicResource S.AccountSettingsPage.ChangeDisplayName}" />

                            <TextBox Text="{CompiledBinding DisplayNameInput.Value}" />

                            <Button HorizontalAlignment="Right"
                                    Command="{CompiledBinding ChangeDisplayName}"
                                    Content="{DynamicResource S.AccountSettingsPage.Change}" />
                        </StackPanel>
                    </ctrls:OptionsDisplayItem.Content>
                </ctrls:OptionsDisplayItem>

                <!--  アカウントを削除  -->
                <ctrls:OptionsDisplayItem x:Name="optionsItem2"
                                          Header="{DynamicResource S.AccountSettingsPage.DeleteAccount}"
                                          Navigates="True"
                                          NavigationRequested="DeleteAccount_Click">

                    <ctrls:OptionsDisplayItem.Icon>
                        <ctrls:CompatSymbolIcon Symbol="PersonSubtract" />
                    </ctrls:OptionsDisplayItem.Icon>
                </ctrls:OptionsDisplayItem>

                <!--  パスワードを変更  -->
                <ctrls:OptionsDisplayItem x:Name="optionsItem3"
                                          Expands="True"
                                          Header="{DynamicResource S.AccountSettingsPage.ChangePassword}"
                                          IsVisible="{CompiledBinding SignInWithEmail.Value}">

                    <ctrls:OptionsDisplayItem.Icon>
                        <ctrls:CompatSymbolIcon Symbol="PersonSubtract" />
                    </ctrls:OptionsDisplayItem.Icon>

                    <ctrls:OptionsDisplayItem.Content>
                        <StackPanel>
                            <TextBlock Classes="BodyTextBlockStyle" Text="{DynamicResource S.AccountSettingsPage.ChangePassword}" />

                            <TextBlock Margin="0,12,0,8"
                                       Classes="CaptionTextBlockStyle"
                                       Text="{DynamicResource S.Common.Password}" />

                            <TextBox Classes="revealPasswordButton"
                                     PasswordChar="*"
                                     Text="{CompiledBinding Password.Value}" />

                            <TextBlock Margin="0,12,0,8"
                                       Classes="CaptionTextBlockStyle"
                                       Text="{DynamicResource S.AccountSettingsPage.NewPassword}" />

                            <TextBox Classes="revealPasswordButton"
                                     PasswordChar="*"
                                     Text="{CompiledBinding NewPassword.Value}" />

                            <TextBlock Margin="0,8,0,0"
                                       Classes="ErrorTextBlockStyle"
                                       Text="{CompiledBinding ChangePasswordError.Value}" />

                            <ProgressBar Margin="0,12,0,0"
                                         IsIndeterminate="True"
                                         IsVisible="{CompiledBinding ChangePasswordInProgress.Value}" />

                            <Button Margin="0,8,0,0"
                                    HorizontalAlignment="Right"
                                    Command="{CompiledBinding ChangePassword}"
                                    Content="{DynamicResource S.AccountSettingsPage.Change}" />
                        </StackPanel>
                    </ctrls:OptionsDisplayItem.Content>
                </ctrls:OptionsDisplayItem>

                <!--  Googleとの連携を解除  -->
                <ctrls:OptionsDisplayItem x:Name="optionsItem4"
                                          Header="{DynamicResource S.AccountSettingsPage.UnlinkFromGoogle}"
                                          IsVisible="{CompiledBinding SignInWithGoogleAndEmail.Value}"
                                          Navigates="True"
                                          NavigationRequested="UnlinkGoogle_Click">

                    <ctrls:OptionsDisplayItem.Icon>
                        <!--<ui:ImageIcon Width="16"
                                      Height="16"
                                      Source="avares://Firebase.Auth.UI.Avalonia/Assets/google.png" />-->
                    </ctrls:OptionsDisplayItem.Icon>

                </ctrls:OptionsDisplayItem>

                <!--  Googleと連携  -->
                <ctrls:OptionsDisplayItem x:Name="optionsItem5"
                                          Header="{DynamicResource S.AccountSettingsPage.LinkWithGoogle}"
                                          IsVisible="{CompiledBinding SignInWithEmailOnly.Value}"
                                          Navigates="True"
                                          NavigationRequested="LinkGoogle_Click">

                    <ctrls:OptionsDisplayItem.Icon>
                        <!--<ui:ImageIcon Width="16"
                                      Height="16"
                                      Source="avares://Firebase.Auth.UI.Avalonia/Assets/google.png" />-->
                    </ctrls:OptionsDisplayItem.Icon>

                </ctrls:OptionsDisplayItem>

            </StackPanel>


        </ScrollViewer>

        <!--<fau:FirebaseUIControl IsVisible="{CompiledBinding !SignedIn.Value}"
                               x:Name="firebaseControl"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />-->

        <!--  ダイアログ1  -->
        <ui:ContentDialog x:Name="dialog1"
                          Title="{DynamicResource S.AccountSettingsPage.Dialog1.Title}"
                          CloseButtonText="{DynamicResource S.Common.No}"
                          DefaultButton="Close"
                          PrimaryButtonText="{DynamicResource S.Common.Yes}"
                          SecondaryButtonText="{DynamicResource S.AccountSettingsPage.WithGoogle}">
            <StackPanel>
                <TextBlock x:Name="dialog1Text" />
                <TextBlock Margin="0,12,0,8"
                           Classes="CaptionTextBlockStyle"
                           Text="{DynamicResource S.Common.Password}" />

                <TextBox x:Name="dialog1Password"
                         Classes="revealPasswordButton"
                         PasswordChar="*" />

                <TextBlock x:Name="dialog1Error"
                           Classes="ErrorTextBlockStyle"
                           Opacity="0" />
            </StackPanel>
        </ui:ContentDialog>

        <!--  ダイアログ1 Google  -->
        <ui:ContentDialog x:Name="dialog1Google"
                          Title="{DynamicResource S.AccountSettingsPage.Dialog1.Title}"
                          CloseButtonText="{DynamicResource S.Common.No}"
                          DefaultButton="Close"
                          PrimaryButtonText="{DynamicResource S.Common.Yes}"
                          SecondaryButtonText="{DynamicResource S.AccountSettingsPage.WithPassword}">
            <StackPanel>
                <TextBlock x:Name="dialog1GoogleText" />

                <ContentControl>
                    <ContentControl.Resources>
                        <!--<fauConverter:BackgroundTransparentConverter x:Key="BackgroundTransparentConverter" />-->
                    </ContentControl.Resources>
                    <Button x:Name="dialog1GoogleSignIn"
                            Margin="25,6"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Stretch"
                            Background="White"
                            BorderBrush="Transparent"
                            Click="SignInWithGoogleClick">
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
                                <!--<Setter Property="Background" Value="{Binding $parent[Button].Background, Converter={StaticResource BackgroundTransparentConverter}}" />-->
                            </Style>
                            <Style Selector="TextBlock">
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="FontWeight" Value="Medium" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="Margin" Value="0 0 12 0" />
                            </Style>

                            <Style Selector="Image">
                                <Setter Property="Height" Value="20" />
                                <Setter Property="Width" Value="20" />
                                <Setter Property="Margin" Value="18 9" />
                            </Style>
                        </Button.Styles>

                        <StackPanel Orientation="Horizontal">
                            <!--<Image Source="avares://Firebase.Auth.UI.Avalonia/Assets/google.png" />

                            <TextBlock Foreground="#757575" Text="{Binding FuiSignInWithGoogle, Source={x:Static fuiRes:AppResources.Instance}}" />-->
                            <TextBlock Foreground="#757575" Text="Sign in with Google" />
                        </StackPanel>
                    </Button>
                </ContentControl>

                <TextBlock x:Name="dialog1GoogleError"
                           Classes="ErrorTextBlockStyle"
                           Opacity="0" />
            </StackPanel>
        </ui:ContentDialog>
    </Panel>
</UserControl>
