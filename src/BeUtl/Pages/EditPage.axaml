<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:BeUtl.Views"
    xmlns:vm="using:BeUtl.ViewModels"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:ic="using:FluentIcons.Avalonia"
    mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
    x:DataType="vm:EditPageViewModel"
    x:Class="BeUtl.Pages.EditPage">
    <UserControl.Resources>
        <MenuFlyout x:Key="AddButtonFlyout" Placement="Bottom">
            <MenuFlyout.Items>
                <MenuItem
                    Header="{DynamicResource S.EditPage.Open}"
                    Click="OpenClick"
                    IsEnabled="{Binding IsProjectOpened.Value}">
                    <MenuItem.Icon>
                        <ic:SymbolIcon Symbol="Open" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Header="{DynamicResource S.EditPage.CreateNew}"
                    Click="NewClick">
                    <MenuItem.Icon>
                        <ic:SymbolIcon Symbol="New" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuFlyout.Items>
        </MenuFlyout>
    </UserControl.Resources>
    <ui:TabView
        x:Name="tabview"
        BorderBrush="{DynamicResource ButtonBorderBrush}"
        BorderThickness="0,1,0,0"
        VerticalAlignment="Stretch"
        AddTabButtonClick="AddButtonClick">
        <ui:TabView.Resources>
            <SolidColorBrush x:Key="TabViewItemHeaderBackgroundSelected" Color="Transparent" />
        </ui:TabView.Resources>
        <ui:TabView.Styles>
            <Style Selector="ui|TabViewItem:selected /template/ Border#TabContainerBorder">
                <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}" />
                <Setter Property="Background" Value="{DynamicResource ButtonBackground}" />
            </Style>
        </ui:TabView.Styles>
    </ui:TabView>
</UserControl>
