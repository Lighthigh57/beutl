<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:BeUtl.Views"
    xmlns:vm="using:BeUtl.ViewModels"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
    x:DataType="vm:EditPageViewModel"
    x:Class="BeUtl.Pages.EditPage">
    <UserControl.DataContext>
        <vm:EditPageViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <MenuFlyout x:Key="AddButtonFlyout" Placement="Bottom">
            <MenuFlyout.Items>
                <MenuItem
                    Header="{DynamicResource S.EditPage.Open}"
                    Click="OpenClick"
                    IsEnabled="{Binding IsProjectOpened.Value}">
                    <MenuItem.Icon>
                        <FluentIconRegular IconType="Open" Classes="Small" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem
                    Header="{DynamicResource S.EditPage.CreateNew}"
                    Click="NewClick">
                    <MenuItem.Icon>
                        <FluentIconRegular IconType="New" Classes="Small" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuFlyout.Items>
        </MenuFlyout>
    </UserControl.Resources>
    <DraggableTabView
        x:Name="tabview"
        ClickOnAddingButton="AddButtonClick"/>
</UserControl>
