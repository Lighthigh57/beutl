            Minimum = new(<#= t.Element #>.MinValue, <#= t.Element #>.MinValue);
        }

        public override bool TryCoerce(ValidationContext context, ref <#= fullName #> value)
        {
            value = new <#= fullName #>(
                Math.Clamp(value.<#= t.FieldX #>, Minimum.<#= t.FieldX #>, Maximum.<#= t.FieldX #>),
                Math.Clamp(value.<#= t.FieldY #>, Minimum.<#= t.FieldY #>, Maximum.<#= t.FieldY #>));

            return true;
        }
        
        public override string? Validate(ValidationContext context, <#= fullName #> value)
        {
            if (value.<#= t.FieldX #> >= Minimum.<#= t.FieldX #> && value.<#= t.FieldX #> <= Maximum.<#= t.FieldX #>
                && value.<#= t.FieldY #> >= Minimum.<#= t.FieldY #> && value.<#= t.FieldY #> <= Maximum.<#= t.FieldY #>)
            {
                return $"The value must be between {Minimum} and {Maximum}.";
            }
            else
            {
                return null;
            }
        }
    }
<# } #>

