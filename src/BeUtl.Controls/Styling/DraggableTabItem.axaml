<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:BeUtl.Controls;assembly=BeUtl.Controls"
        xmlns:i="using:Avalonia.Xaml.Interactivity"
        xmlns:b="clr-namespace:BeUtl.Controls.Behaviors;assembly=BeUtl.Controls">
    <Design.PreviewWith>
        <Border>
            <local:DraggableTabView TabStripPlacement="Top">
                <local:DraggableTabItem Header="Hello" IsClosable="True">
                    <Border Width="500" Height="500">
                        <TextBlock Text="Content" />
                    </Border>
                </local:DraggableTabItem>
                <local:DraggableTabItem Header="Hello" IsClosable="True">
                    <Border Width="500" Height="500">
                        <TextBlock Text="Content" />
                    </Border>
                </local:DraggableTabItem>
                <local:DraggableTabItem Header="Hello" IsClosable="True">
                    <Border Width="500" Height="500">
                        <TextBlock Text="Content" />
                    </Border>
                </local:DraggableTabItem>
            </local:DraggableTabView>
        </Border>
    </Design.PreviewWith>

    <Styles.Resources>
        <StreamGeometry x:Key="CloseGeometry">M405 136.798L375.202 107 256 226.202 136.798 107 107 136.798 226.202 256 107 375.202 136.798 405 256 285.798 375.202 405 405 375.202 285.798 256z</StreamGeometry>
        <sys:Double x:Key="DraggableTabItemDraggingOpacity">0.5</sys:Double>
        <sys:Double x:Key="DraggableTabItemDisabledOpacity">0.6</sys:Double>
        <sys:Double x:Key="DraggableTabItemFontSize">12</sys:Double>
    </Styles.Resources>

    <Style Selector="local|DraggableTabItem">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FontSize" Value="{DynamicResource DraggableTabItemFontSize}" />
        <Setter Property="CornerRadius" Value="{DynamicResource ControlCornerRadius}" />
        <Setter Property="BorderThickness" Value="{DynamicResource ToggleButtonBorderThemeThickness}" />
        <Setter Property="ZIndex" Value="0"/>
        <Setter Property="Icon">
            <Template>
                <local:FluentIconRegular IconType="Tab_Desktop_New_Page" Width="16" Height="16" />
            </Template>
        </Setter>
    </Style>
    <Style Selector="local|DraggableTabItem:pressed">
        <Setter Property="ZIndex" Value="1" />
    </Style>

    <!--Templates-->
    <Style Selector="local|DraggableTabItem[TabStripPlacement=Top]">
        <Setter Property="MinWidth" Value="200" />
        <Setter Property="Height" Value="32" />
        <Setter Property="Padding" Value="8,0" />
        <Setter Property="(i:Interaction.Behaviors)">
            <b:SharedContentTemplate>
                <b:SharedContent>
                    <i:BehaviorCollection>
                        <b:ItemDragBehavior Orientation="Horizontal"/>
                    </i:BehaviorCollection>
                </b:SharedContent>
            </b:SharedContentTemplate>
        </Setter>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="PART_Container"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="8,0">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <ContentPresenter Name="PART_Icon" Content="{TemplateBinding Icon}" />

                        <ContentPresenter Grid.Column="1"
                                          Name="PART_ContentPresenter"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          ContentTemplate="{TemplateBinding HeaderTemplate}"
                                          Content="{TemplateBinding Header}"
                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="{TemplateBinding Margin}"
                                          Padding="{TemplateBinding Padding}"
                                          TextBlock.Foreground="{TemplateBinding Foreground}" />
                        <Button Grid.Column="2"
                                Name="PART_CloseButton"
                                Foreground="{TemplateBinding Foreground}">
                            <PathIcon Data="{DynamicResource CloseGeometry}" Width="12" Height="12" />
                        </Button>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="local|DraggableTabItem[TabStripPlacement=Bottom]">
        <Setter Property="MinWidth" Value="200" />
        <Setter Property="Height" Value="32" />
        <Setter Property="Padding" Value="8,0" />
        <Setter Property="(i:Interaction.Behaviors)">
            <b:SharedContentTemplate>
                <b:SharedContent>
                    <i:BehaviorCollection>
                        <b:ItemDragBehavior Orientation="Horizontal"/>
                    </i:BehaviorCollection>
                </b:SharedContent>
            </b:SharedContentTemplate>
        </Setter>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="PART_Container"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="8,0">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <ContentPresenter Name="PART_Icon" Content="{TemplateBinding Icon}" />

                        <ContentPresenter Grid.Column="1"
                                          Name="PART_ContentPresenter"
                                          Background="Transparent"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          ContentTemplate="{TemplateBinding HeaderTemplate}"
                                          Content="{TemplateBinding Header}"
                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="{TemplateBinding Margin}"
                                          Padding="{TemplateBinding Padding}"
                                          TextBlock.Foreground="{TemplateBinding Foreground}" />
                        <Button Grid.Column="2"
                                Name="PART_CloseButton"
                                Foreground="{TemplateBinding Foreground}">
                            <PathIcon Data="{DynamicResource CloseGeometry}" Width="12" Height="12" />
                        </Button>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="local|DraggableTabItem[TabStripPlacement=Left]">
        <Setter Property="Width" Value="32" />
        <Setter Property="Padding" Value="8,0" />
        <Setter Property="(i:Interaction.Behaviors)">
            <b:SharedContentTemplate>
                <b:SharedContent>
                    <i:BehaviorCollection>
                        <b:ItemDragBehavior Orientation="Vertical"/>
                    </i:BehaviorCollection>
                </b:SharedContent>
            </b:SharedContentTemplate>
        </Setter>
        <Setter Property="Template">
            <ControlTemplate>
                <LayoutTransformControl>
                    <LayoutTransformControl.LayoutTransform>
                        <RotateTransform Angle="-90" />
                    </LayoutTransformControl.LayoutTransform>
                    <Border Name="PART_Container"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="8,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <ContentPresenter Name="PART_Icon" Content="{TemplateBinding Icon}" />

                            <ContentPresenter Grid.Column="1"
                                              Name="PART_ContentPresenter"
                                              Background="Transparent"
                                              ContentTemplate="{TemplateBinding HeaderTemplate}"
                                              Content="{TemplateBinding Header}"
                                              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Margin}"
                                              Padding="{TemplateBinding Padding}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}" />
                            <Button Grid.Column="2"
                                    Name="PART_CloseButton"
                                    Foreground="{TemplateBinding Foreground}">
                                <PathIcon Data="{DynamicResource CloseGeometry}" Width="12" Height="12" />
                            </Button>
                        </Grid>
                    </Border>
                </LayoutTransformControl>
            </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="local|DraggableTabItem[TabStripPlacement=Right]">
        <Setter Property="Width" Value="32" />
        <Setter Property="Padding" Value="0,8" />
        <Setter Property="(i:Interaction.Behaviors)">
            <b:SharedContentTemplate>
                <b:SharedContent>
                    <i:BehaviorCollection>
                        <b:ItemDragBehavior Orientation="Vertical"/>
                    </i:BehaviorCollection>
                </b:SharedContent>
            </b:SharedContentTemplate>
        </Setter>
        <Setter Property="Template">
            <ControlTemplate>
                <LayoutTransformControl>
                    <LayoutTransformControl.LayoutTransform>
                        <RotateTransform Angle="90" />
                    </LayoutTransformControl.LayoutTransform>
                    <Border Name="PART_Container"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="8,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <ContentPresenter Name="PART_Icon" Content="{TemplateBinding Icon}" />

                            <ContentPresenter Grid.Column="1"
                                              Name="PART_ContentPresenter"
                                              Background="Transparent"
                                              ContentTemplate="{TemplateBinding HeaderTemplate}"
                                              Content="{TemplateBinding Header}"
                                              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Margin}"
                                              Padding="{TemplateBinding Padding}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}" />
                            <Button Grid.Column="2"
                                    Name="PART_CloseButton"
                                    Foreground="{TemplateBinding Foreground}">
                                <PathIcon Data="{DynamicResource CloseGeometry}" Width="12" Height="12" />
                            </Button>
                        </Grid>
                    </Border>
                </LayoutTransformControl>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="local|DraggableTabItem /template/ Button#PART_CloseButton">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
    <Style Selector="local|DraggableTabItem[IsClosable=True] /template/ Button#PART_CloseButton">
        <Setter Property="IsVisible" Value="True" />
    </Style>

    <Style Selector="local|DraggableTabItem:disabled">
        <Setter Property="Opacity" Value="{DynamicResource DraggableTabItemDisabledOpacity}" />
    </Style>
    <Style Selector="local|DraggableTabItem:dragging">
        <Setter Property="Opacity" Value="{DynamicResource DraggableTabItemDraggingOpacity}" />
    </Style>

    <Style Selector="local|DraggableTabItem /template/ ContentPresenter#PART_Icon">
        <Setter Property="MaxHeight" Value="16"/>
    </Style>

    <Style Selector="local|DraggableTabItem[IsSelected=True] /template/ Border#PART_Container">
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}" />
        <Setter Property="Background" Value="{DynamicResource ButtonBackground}" />
    </Style>
    <Style Selector="local|DraggableTabItem[IsSelected=False] /template/ Border#PART_Container">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="local|DraggableTabItem[IsSelected=False]:pointerover /template/ Border#PART_Container">
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundPointerOver}" />
    </Style>
</Styles>
