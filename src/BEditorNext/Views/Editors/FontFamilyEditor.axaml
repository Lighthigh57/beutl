<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:BEditorNext.Views.Editors"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="300"
             x:Class="BEditorNext.Views.Editors.FontFamilyEditor">
    <Grid ColumnDefinitions="2*,3*,Auto">
        <TextBlock
            Margin="10,0,0,0"
            Text="{Binding Header.Value}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />

        <ui:DropDownButton Grid.Column="1"
                           x:Name="button"
                           HorizontalAlignment="Stretch"
                           Content="{Binding Setter.Value.Name, Mode=OneWay}"
                           Margin="4" />

        <local:EditorBadge Grid.Column="2" />
    </Grid>
</UserControl>
