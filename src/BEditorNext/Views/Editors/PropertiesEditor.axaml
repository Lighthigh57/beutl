<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BEditorNext.ViewModels.Editors"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:DataType="vm:PropertiesEditorViewModel"
    x:Class="BEditorNext.Views.Editors.PropertiesEditor">
    <ItemsControl Items="{CompiledBinding Layer.Children}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Expander Padding="0">
                    <Expander.Header>
                        <StackPanel>
                            <CheckBox IsChecked="{Binding IsEnabled}" />
                        </StackPanel>
                    </Expander.Header>

                    <ItemsControl Items="{Binding Setters}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding Converter={StaticResource ModelToViewConverter}}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Expander>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
