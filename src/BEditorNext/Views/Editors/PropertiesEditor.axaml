<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:BEditorNext.ViewModels.Editors"
    xmlns:local="using:BEditorNext.Views.Editors"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    DragDrop.AllowDrop="True"
    x:DataType="vm:PropertiesEditorViewModel"
    x:Class="BEditorNext.Views.Editors.PropertiesEditor">
    <ScrollViewer>
        <ItemsControl Items="{CompiledBinding Layer.Children}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:OperationEditor />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
