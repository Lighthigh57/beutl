<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BEditorNext.ViewModels.Editors"
             xmlns:local="using:BEditorNext.Views.Editors"
             mc:Ignorable="d" d:DesignWidth="300"
             x:Class="BEditorNext.Views.Editors.BaseVector2Editor">
    <Grid ColumnDefinitions="2*,3*,Auto">
        <TextBlock
            Margin="10,0,0,0"
            Text="{Binding Header.Value}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />

        <Grid Grid.Column="1" RowDefinitions="*,*" ColumnDefinitions="*,2*">
            <Grid.Styles>
                <Style Selector="TextBox">
                    <Setter Property="Margin" Value="4" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="VerticalAlignment" Value="Stretch" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                </Style>
            </Grid.Styles>

            <TextBlock
                Margin="4,0"
                VerticalAlignment="Center"
                x:Name="xText" />

            <TextBlock
                Margin="4,0"
                Grid.Row="1"
                VerticalAlignment="Center"
                x:Name="yText" />

            <TextBox
                Grid.Column="1"
                x:Name="xTextBox" />

            <TextBox
                Grid.Column="1"
                Grid.Row="1"
                x:Name="yTextBox" />

        </Grid>
        <local:EditorBadge
            Grid.Column="2"
            VerticalAlignment="Top"
            Margin="0,8" />
    </Grid>
</UserControl>
