<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="300"
    xmlns:vm="using:BEditorNext.ViewModels.Editors"
    xmlns:local="using:BEditorNext.Views.Editors"
    x:DataType="vm:SizeEditorViewModel"
    x:Class="BEditorNext.Views.Editors.SizeEditor">
    <Grid ColumnDefinitions="2*,3*,Auto">
        <TextBlock
            Margin="10,0,0,0"
            Text="{Binding Header.Value}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />

        <Grid Grid.Column="1" RowDefinitions="*,*" ColumnDefinitions="*,2*">
            <Grid.Styles>
                <Style Selector="TextBox">
                    <Setter Property="Margin" Value="4" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="VerticalAlignment" Value="Stretch" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                </Style>
            </Grid.Styles>

            <TextBlock
                Margin="4,0"
                VerticalAlignment="Center"
                Text="{DynamicResource WidthString}" />

            <TextBlock
                Margin="4,0"
                Grid.Row="1"
                VerticalAlignment="Center"
                Text="{DynamicResource HeightString}" />
            
            <TextBox
                Grid.Column="1"
                x:Name="widthTextBox"
                Text="{Binding Value.Value.Width, Mode=OneWay}" />

            <TextBox
                Grid.Column="1"
                Grid.Row="1"
                x:Name="heightTextBox"
                Text="{Binding Value.Value.Height, Mode=OneWay}" />

        </Grid>
        <local:EditorBadge
            Grid.Column="2"
            VerticalAlignment="Top"
            Margin="0,8" />
    </Grid>
</UserControl>
