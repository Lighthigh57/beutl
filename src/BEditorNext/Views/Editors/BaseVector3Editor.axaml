<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BEditorNext.ViewModels.Editors"
             xmlns:local="using:BEditorNext.Views.Editors"
             mc:Ignorable="d" d:DesignWidth="300"
             x:Class="BEditorNext.Views.Editors.BaseVector3Editor">
    <Grid RowDefinitions="*,*,*" ColumnDefinitions="2*,3*,Auto">
        <Grid.Styles>
            <Style Selector="TextBox">
                <Setter Property="Margin" Value="4" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>
        </Grid.Styles>

        <TextBlock
            Margin="10,0,0,0"
            Text="{Binding Header.Value}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />

        <Grid Grid.Column="1" ColumnDefinitions="*,2*">
            <TextBlock
                Margin="8,0"
                VerticalAlignment="Center"
                x:Name="xText" />

            <TextBox
                Grid.Column="1"
                x:Name="xTextBox" />
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1" ColumnDefinitions="*,2*">
            <TextBlock
                Margin="8,0"
                VerticalAlignment="Center"
                x:Name="yText" />

            <TextBox
                Grid.Column="1"
                x:Name="yTextBox" />
        </Grid>
        <Grid Grid.Column="1" Grid.Row="2" ColumnDefinitions="*,2*">
            <TextBlock
                Margin="8,0"
                VerticalAlignment="Center"
                x:Name="zText" />

            <TextBox
                Grid.Column="1"
                x:Name="zTextBox" />
        </Grid>

        <local:EditorBadge
            Grid.Column="2"
            VerticalAlignment="Top"
            Margin="0,8" />
    </Grid>
</UserControl>
