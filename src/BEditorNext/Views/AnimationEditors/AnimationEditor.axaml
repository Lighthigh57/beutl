<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:BEditorNext.Views.AnimationEditors"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    Width="{Binding Width.Value, Mode=TwoWay}"
    x:Class="BEditorNext.Views.AnimationEditors.AnimationEditor">
    <Border
        BorderBrush="{DynamicResource ControlElevationBorderBrush}"
        BorderThickness="1"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Grid RowDefinitions="32,*">
            <Panel Background="{DynamicResource ControlFillColorDefaultBrush}">
                <Border
                    Cursor="SizeWestEast"
                    x:Name="dragBorder"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <FluentIconRegular IconType="More_Horizontal" />
                </Border>

                <Border
                    Cursor="SizeWestEast"
                    x:Name="resizeBorder"
                    BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                    BorderThickness="{DynamicResource ControlElevationBorderThickness}"
                    CornerRadius="4,0,0,4"
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    Width="8"
                    HorizontalAlignment="Right" />
            </Panel>

            <local:EasingGraph Grid.Row="1" Easing="{Binding Animation.Easing, Mode=OneWay}" />
        </Grid>
    </Border>
</UserControl>
