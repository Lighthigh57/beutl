<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300"
             x:Class="BEditorNext.Views.AnimationEditors.BaseVector4AnimationEditor">
    <Grid ColumnDefinitions="2*,3*,Auto" RowDefinitions="*,Auto,*">
        <Grid.Styles>
            <Style Selector="TextBox">
                <Setter Property="Margin" Value="4" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>
        </Grid.Styles>
        <TextBlock
            Margin="10,0,0,0"
            Text="{Binding Header.Value}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />

        <Grid Grid.Column="1" ColumnDefinitions="24,*,*" RowDefinitions="*,*">

            <FluentIconRegular IconType="Arrow_Left" Width="16" Height="16" />

            <TextBox
                Grid.Column="1"
                x:Name="prevXTextBox">
                <TextBox.InnerRightContent>
                    <TextBlock x:Name="prevXText" VerticalAlignment="Center" Margin="4,0" />
                </TextBox.InnerRightContent>
            </TextBox>

            <TextBox
                Grid.Column="2"
                x:Name="prevYTextBox">
                <TextBox.InnerRightContent>
                    <TextBlock x:Name="prevYText" VerticalAlignment="Center" Margin="4,0" />
                </TextBox.InnerRightContent>
            </TextBox>

            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                x:Name="prevZTextBox">
                <TextBox.InnerRightContent>
                    <TextBlock x:Name="prevZText" VerticalAlignment="Center" Margin="4,0" />
                </TextBox.InnerRightContent>
            </TextBox>

            <TextBox
                Grid.Row="1"
                Grid.Column="2"
                x:Name="prevWTextBox">
                <TextBox.InnerRightContent>
                    <TextBlock x:Name="prevWText" VerticalAlignment="Center" Margin="4,0" />
                </TextBox.InnerRightContent>
            </TextBox>
        </Grid>

        <Separator Grid.Row="1"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Stretch"
                   Margin="{DynamicResource MenuFlyoutSeparatorThemePadding}"
                   Background="{DynamicResource MenuFlyoutSeparatorBackground}"
                   Height="{DynamicResource MenuFlyoutSeparatorHeight}" />
        
        <Grid Grid.Column="1" Grid.Row="2" ColumnDefinitions="24,*,*" RowDefinitions="*,*">
            <FluentIconRegular IconType="Arrow_Right" Width="16" Height="16" />

            <TextBox
                Grid.Column="1"
                x:Name="nextXTextBox">
                <TextBox.InnerRightContent>
                    <TextBlock x:Name="nextXText" VerticalAlignment="Center" Margin="4,0" />
                </TextBox.InnerRightContent>
            </TextBox>

            <TextBox
                Grid.Column="2"
                x:Name="nextYTextBox">
                <TextBox.InnerRightContent>
                    <TextBlock x:Name="nextYText" VerticalAlignment="Center" Margin="4,0" />
                </TextBox.InnerRightContent>
            </TextBox>

            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                x:Name="nextZTextBox">
                <TextBox.InnerRightContent>
                    <TextBlock x:Name="nextZText" VerticalAlignment="Center" Margin="4,0" />
                </TextBox.InnerRightContent>
            </TextBox>

            <TextBox
                Grid.Row="1"
                Grid.Column="2"
                x:Name="nextWTextBox">
                <TextBox.InnerRightContent>
                    <TextBlock x:Name="nextWText" VerticalAlignment="Center" Margin="4,0" />
                </TextBox.InnerRightContent>
            </TextBox>
        </Grid>
    </Grid>
</UserControl>
