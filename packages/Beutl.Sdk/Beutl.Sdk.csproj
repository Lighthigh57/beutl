<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <!-- おすすめはしませんが、アプリケーション側のクラスを使う場合はこのプロパティを'true'に変更します。 -->
    <IncludeExeProject>false</IncludeExeProject>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="$(MSBuildThisFileDirectory)/../../src/Beutl.Configuration/Beutl.Configuration.csproj" PrivateAssets="All" />
    <ProjectReference Include="$(MSBuildThisFileDirectory)/../../src/Beutl.Core/Beutl.Core.csproj" PrivateAssets="All" />
    <ProjectReference Include="$(MSBuildThisFileDirectory)/../../src/Beutl.Framework/Beutl.Framework.csproj" PrivateAssets="All" />
    <ProjectReference Include="$(MSBuildThisFileDirectory)/../../src/Beutl.Graphics/Beutl.Graphics.csproj" PrivateAssets="All" />
    <ProjectReference Include="$(MSBuildThisFileDirectory)/../../src/Beutl.Operators/Beutl.Operators.csproj" PrivateAssets="All" />
    <ProjectReference Include="$(MSBuildThisFileDirectory)/../../src/Beutl.ProjectSystem/Beutl.ProjectSystem.csproj" PrivateAssets="All" />
    <ProjectReference Include="$(MSBuildThisFileDirectory)/../../src/Beutl.Utilities/Beutl.Utilities.csproj" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup Condition="'$(IncludeExeProject)' == 'true'">
    <ProjectReference Include="$(MSBuildThisFileDirectory)/../../src/Beutl/Beutl.csproj" PrivateAssets="All" />
  </ItemGroup>

  <Import Project="$(RootDirectory)\build\props\CopyProjectReferencesToPackage.props" />
  <Import Project="$(RootDirectory)\build\props\CopyProjectReferencesToPackage.targets" />
</Project>